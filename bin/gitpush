#!/bin/sh

case $1 in -doc*)
    echo "
gitpush
    Push changes in the current local repository to
    that repository's remote origin (see gitbare and
    gitclone).

    gitpush will fail if it the remote origin has
    been updated by someone else since you did the
    last gitpush or gitpull.  In his case use
    gitconflict, then gitmerge, then gitpush."

    exit 1
    ;;
esac

git push --mirror --no-force
