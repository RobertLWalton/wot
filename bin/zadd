#!/bin/sh
files=
found=0
for zone in "$@"
do
    shopt -s nullglob
    x=`egrep -l "( |:)$zone(\$|:)" ~/.ssh/*_id_{rsa,dsa}.pub`
    shopt -u nullglob
    for y in $x
    do
	z="$HOME/.ssh/`basename $y .pub`"
	if ssh-add -l | grep -q $z
	then
	    donothing=
	else
	    files="$files $z"
	    found=1
	fi
    done
done
if [ $found == 1 ]
then
    echo "ssh-add $files"
    ssh-add $files 2>/dev/null
fi
