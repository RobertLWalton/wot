# for this program.


case $1 in -doc*)
    echo "
gitfetch [remote]
    Fetch all the commits from current repository
    or designated remote repository to the \`master'
    branch of the repository.
    
    The current repository \`HEAD' can then be diffed
    with \`FETCH_HEAD'.  Note that \`gitfetch' is
    automatically executed by programs that accept
    \`r' as a commit name."

    exit 1
    ;;
esac

git fetch $1
