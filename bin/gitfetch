case $1 in -doc*)
    echo "
gitfetch
    Pull all the commits from current repository's
    remote origin to the local version of that
    repository (whose head is \`origin/HEAD').
    
    The current repository \`HEAD' can then be diffed
    with \`origin/HEAD'."

    exit 1
    ;;
esac

git fetch
