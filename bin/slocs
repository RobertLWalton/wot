#! /bin/csh -f

if ( $#argv >= 2 && "$1" == "-ExEcUte" ) then
    shift
else if ( $#argv >= 2 && "$1" == "-debug" ) then
    shift
    exec $0 -ExEcUte $argv:q | grep '[^ 	]' | less
    exit 0
else
    exec $0 -ExEcUte $argv:q | grep -c '[^ 	]'
    exit 0
endif

foreach x ($argv:q)
    switch ( $x )
    case *.c:
    case *.cc:
    case *.java:
	grep -v '^[ 	]*\/\/' $x | grep ';'
	breaksw

    default:
	grep -v '^[ 	]*#' $x
	breaksw

    endsw
end
exit 0
