#!/bin/bash
#
# Remote save/restore program using rsync and
# ~/.remsaverc.
#
# File:		remsave
# Author:	walton@acm.org
# Date:		Wed Aug 10 15:50:06 EDT 2016

flags='-av --delete'
ask=yes
quiet=no
while [ x = x ]
do
    case "$1" in
    -y) ask=no
        shift ;;
    -q) quiet=yes
        shift ;;
    -*)
        flags="$flags $1"
	shift ;;
    *)  break;;
    esac
done

# This exits if no media.  If quiet=no it echos
# error message.
#
. ~/.remsaverc

local=LOCAL_$1
local=${!local}
remote=REMOTE_$1
remote=${!remote}

if [ "$local" = "" ]
then
    list=""
    for x in ${!LOCAL_*}
    do
        y=`expr "$x" : 'LOCAL_\(.*\)'`
	list="$list $y"
    done
    echo "$0 [-n] [-w] [-y] DIR"
    echo ""
    echo "where DIR is one of:$list"
    exit 1
fi

if [ -r "$local/.BACKUP-IGNORE" ]
then
    flags="$flags --exclude-from=$local/.BACKUP-IGNORE"
fi

case "$0" in
    *save)
        src="${local}/"
	des="${remote}/"
	;;
    *restore)
	src="${remote}/"
        des="${local}/"
	;;
    *)
        echo "Command name $0 not *save or *restore"
	exit 1
	;;
esac

echo rsync $flags '\'
echo "   " "${src}" "${des}"
if [ $ask = yes ]
then
    echo 'OK (y or n)?'
    read
    if test "$REPLY" != "y"
    then
	echo ABORTING
	exit 1
    fi
fi

rsync $flags "${src}" "${des}"
