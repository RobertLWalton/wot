#set font=-adobe-courier-medium-r-normal--12-120-75-75-m-70-iso8859-1
set location=80x35+2+100
set program=""
set title="$HOST"
if ("$3" != "") set program="-e ssh $3"
if ("$3" != "") set title="$3"
if ("$2" != "") set font="$2"
if ("$1" != "") set location="$1"
(xterm  -title $title -name $title \
	-g $location -fn $font \
	-sb -ls $program )&
