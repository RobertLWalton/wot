#!/bin/sh
case $1 in -doc*)
    echo "
gitrm filename ...
    Move filename if it exists to filename-, and indi-
    cate in the index that filename is to be removed
    from the next commit."

    exit 1
    ;;
esac

for f in "$@"
do
    if test -f "$f"
    then
	echo making backup in "$f-"
	mv -f "$f" "$f-"
    fi
    git rm --cached -f "$f"
done
