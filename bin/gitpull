#!/bin/sh

case $1 in -doc*)
    echo "
gitpull
    Pull changes from current repository's remote origin
    to the current repository.

    If the remote origin contains changes that conflict
    with the current repository, this fails, and you
    should use gitconflict, then gitmerge, then gitpush.

    All files must be committed first.  If this is
    not the case, gitpull complains and aborts."

    exit 1
    ;;
esac

stat=`git status | egrep "^#[ 	]+([a-z ]+:|Chang)"`
if test "$stat" != ""
then
    echo There are uncommitted files:
    echo "$stat"
    echo Commit before pull.
    echo Aborting.
    exit 1
fi

git pull --ff-only
