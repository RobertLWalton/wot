#!/bin/sh

if [ "$1" = "-v" ]
then
    shift
    v=-v
elif [ "$1" = "-c" ]
then
    shift
    v=-c
else
    v=-c
fi

d="$1"
if [ "$d" = "" ]; then d=.; fi
if [ ! -r "$d/Publish" ]; then exit 0; fi

for x in `cat "$d/Publish"`
do
    y=$d/$x
    if [ -x $y ]
    then
	if [ "$x" != "." -a -r "$y/Publish" ]
	then
	    publish $v $y
	else
	    chmod $v a+rx $y
	fi
    else
	chmod $v a+r $y
    fi
done
