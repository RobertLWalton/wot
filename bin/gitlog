#!/bin/sh
case $1 in -doc*)
    echo "
gitlog
    List all commits and file changes."

    exit 1
    ;;
esac

git log --name-status --pretty=format:"%h - %cn - %cd" \
        --date=local --find-renames | \
    awk 'BEGIN { i = 0 }
         /^[0-9a-fA-F]* - / { print "~" i ": " $0
	                      i = i + 1 }
         ! /^[0-9a-fA-F]* - / { print $0 }'
