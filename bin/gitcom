#!/bin/sh
case $1 in -doc*)
    echo "
gitcom
    List all the files that will be committed, ask if
    the commit should proceed, and commit if yes."

    exit 1
    ;;
esac

git status | egrep "^#[ 	]+([a-z ]+:|Chang)"
echo 'OK (y or n)?'
read
if test "$REPLY" = "y"
then
    git commit -a -m update
else
    echo 'ABORTED!'
fi
