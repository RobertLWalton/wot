#!/bin/sh
case $1 in -doc*)
    echo "
gitcom
    List all the committable files that differ from
    their last committed versions, just as gitstat
    would, ask if the commit should proceed, and
    perform a commit operation if yes."

    exit 1
    ;;
esac

git status | egrep \
    "^#[ 	]+([a-z ]+:|Chang|.* branch )"
echo 'OK (y or n)?'
read
if test "$REPLY" = "y"
then
    git commit -a -m update
else
    echo 'ABORTED!'
fi
