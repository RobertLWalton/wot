#!/bin/sh
#
# File:		gitcom
# Author:	Bob Walton <walton@acm.org>
# Date:		Mon Jul  6 07:33:58 EDT 2015
#
# The author(s) have placed this program in the public
# domain; they make no warranty and accept no liability
# for this program.

case $1 in -doc*)
    echo "
gitcom
    List all the committable files that differ from
    their last committed versions, just as gitstat
    would, ask if the commit should proceed, and
    perform a commit operation if yes."

    exit 1
    ;;
esac

if [ -n "`git branch --list -r | grep origin`" ]
then
    if [ "`git diff --name-only HEAD origin/HEAD`" ]
    then
	echo "HEAD and origin/HEAD differ"
    fi
fi
git status --porcelain -uno
echo 'OK (y or n)?'
read
if test "$REPLY" = "y"
then
    git commit -a -m update
else
    echo 'ABORTED!'
fi
